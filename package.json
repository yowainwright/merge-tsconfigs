{
  "name": "merge-tsconfig",
  "version": "0.0.1",
  "description": "A CLI and node scripts to merge 2 or more tsconfig files",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "codependence": "dist/index.cjs",
    "codep": "dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "clean": "rimraf dist",
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "lint": "eslint src --ext .ts",
    "lint-fix": "pnpm run lint --fix",
    "pre-commit": "lint-staged --quiet && pnpm run test",
    "prepublishOnly": "pnpm run test && pnpm run build",
    "release": "release-it",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "update": "codependence --update"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.1",
    "commander": "^9.5.0",
    "cosmiconfig": "^8.0.0",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.0",
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "codependence": "^0.2.6",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.1.0",
    "path-exists-cli": "^2.0.0",
    "prettier": "^2.8.3",
    "release-it": "^15.6.0",
    "rimraf": "^3.0.2",
    "stdouttojson": "^0.7.1",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "turbo": "^1.7.0",
    "typescript": "^4.9.4",
    "vite": "^3.2.5",
    "vitest": "^0.25.8"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v%s"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  },
  "keywords": [
    "tsconfig",
    "typescript",
    "tsconfig-merge",
    "tsconfig-cli",
    "ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/merge-tsconfig.git"
  },
  "author": "Jeff Wainwright <https:jeffry.in> (yowainwright@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yowainwright/merge-tsconfig/issues"
  }
}
